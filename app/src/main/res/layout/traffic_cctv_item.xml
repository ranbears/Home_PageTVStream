<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">

    <TextView
        android:id="@+id/facility_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facility_image"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rounded_container"
        android:layout_marginStart="430dp"
        android:layout_width="500dp"
        android:layout_height="380dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roud_background"
        android:padding="16dp">

        <ImageView
            android:id="@+id/facility_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/facility_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
